<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:id="@+id/chatItem_ImageView"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chatItem_ChatRoomTitle"
            android:textSize="20dp"
            android:text="방 이름"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chatItem_LastMessage"
            android:layout_below="@+id/chatItem_ChatRoomTitle"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/darker_gray"
            android:text="마지막 메시지"/>

        <TextView
            android:id="@+id/chatItem_timestamp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:textSize="12dp"
            android:text="2018-11-29 11:11:11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>